		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    style="@style/text_primary_content_dark"
		    android:id="@+id/details_schedule_description"
		    android:text="No Desciption Given..."
		    android:paddingLeft="10dp"/>
	</LinearLayout>
	</ScrollView>
