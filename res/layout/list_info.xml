<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  	<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="Info"
	       style="@style/activity_title_dark"
	       android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    	<LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:orientation="vertical">
	    <Button
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/list_info_button_about_geoint"
			android:drawableLeft="@drawable/about_geoint"
			android:drawableRight="@drawable/next"
			android:background="@null"
			android:textColor="@android:color/white"
			android:text="About GEOINT"/>
	    <Button
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/list_info_button_speakers"
			android:drawableLeft="@drawable/one_person"
			android:drawableRight="@drawable/next"
			android:background="@null"
			android:textColor="@android:color/white"
			android:text="Keynote Speakers"/>
	    <Button
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/list_info_button_tech_talks"
			android:drawableLeft="@drawable/three_people"
			android:drawableRight="@drawable/next"
			android:background="@null"
			android:textColor="@android:color/white"
			android:text="Tech Talks"/>
	    <!--<Button
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/list_info_button_symposium_location"
			android:drawableLeft="@drawable/symposium_location"
			android:drawableRight="@drawable/next"
			android:background="@null"
			android:textColor="@android:color/white"
			android:text="Symposium Location"/>-->
	    <Button
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/list_info_exhibit_hall_hours"
			android:drawableLeft="@drawable/schedule"
			android:drawableRight="@drawable/next"
			android:background="@null"
			android:textColor="@android:color/white"
			android:text="Exhibit Hall Hours"/>
	    <Button
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/list_info_future_dates"
			android:drawableLeft="@drawable/calendar"
			android:drawableRight="@drawable/next"
			android:background="@null"
			android:textColor="@android:color/white"
			android:text="Future Dates"/>
	    <Button
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/list_info_faq"
			android:drawableLeft="@drawable/faq"
			android:drawableRight="@drawable/next"
			android:background="@null"
			android:textColor="@android:color/white"
			android:text="FAQ"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center_vertical">
		    <Button
		        android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/list_info_about_app"
				android:drawableLeft="@drawable/info"
				android:drawableRight="@drawable/next"
				android:background="@null"
				android:textColor="@android:color/white"
				android:text="About App"/>
	    </LinearLayout>
	</LinearLayout>
	</ScrollView>
    <include layout="@layout/bar_bottom"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>
</LinearLayout>